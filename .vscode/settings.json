{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": ["javascript"],
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.formatOnSave": true,
  "standard.enable": false,
  "eslint.workingDirectories": [
    "/",
    "packages/client",
    "packages/server",
    "scripts"
  ],
  "eslint.options": {
    "extensions": [".js", ".jsx"]
  }
}
